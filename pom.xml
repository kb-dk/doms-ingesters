<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>dk.statsbiblioteket.doms</groupId>
        <artifactId>doms</artifactId>
        <version>0.1.5</version>
    </parent>

    <groupId>dk.statsbiblioteket.doms.ingesters</groupId>
    <artifactId>ingesters</artifactId>
    <version>0.0.8.1</version>
    <name>Doms Ingesters package</name>

    <packaging>pom</packaging>

    <scm>
        <connection>scm:git:git://github.com/statsbiblioteket/doms-ingesters.git</connection>
        <developerConnection>scm:git:git@github.com:statsbiblioteket/doms-ingesters.git</developerConnection>
        <url>https://github.com/statsbiblioteket/doms-ingesters</url>
      <tag>ingesters-0.0.8.1</tag>
  </scm>


    <modules>
        <module>radio-tv</module>
    </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-release-plugin</artifactId>
          <version>2.4.2</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <dependencies>
          <dependency>
            <!-- Needed until release-plugin 2.5 is ready, see MRELEASE-812 "prepare" does not commit before tagging and therefore deploys snapshot instead of release -->
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <version>1.9</version>
          </dependency>
        </dependencies>
        <configuration>
          <!-- Needed by multi-module projects, see http://jira.codehaus.org/browse/MJAVADOC-276 -->
          <preparationGoals>clean verify install</preparationGoals>
        </configuration>
      </plugin>
    </plugins>
  </build>

    <dependencyManagement>

        <dependencies>
            <dependency>
                <groupId>dk.statsbiblioteket.doms.domsutil</groupId>
                <artifactId>domsutil-webservice-common</artifactId>
                <version>0.0.20</version>
            </dependency>
            <dependency>
                <groupId>com.sun.jersey</groupId>
                <artifactId>jersey-client</artifactId>
                <version>1.3</version>
            </dependency>
            <dependency>
              <groupId>dk.statsbiblioteket.doms.client</groupId>
              <artifactId>domsclient</artifactId>
              <version>0.0.8</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.8.2</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>dk.statsbiblioteket.doms.transformers</groupId>
                <artifactId>shardmigrator</artifactId>
                <version>0.1.4</version>
                <exclusions>
                    <exclusion>
                        <groupId>dk.statsbiblioteket.doms.client</groupId>
                        <artifactId>domsClient</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
        </dependencies>

    </dependencyManagement>
</project>
